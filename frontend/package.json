{
  "name": "productivity-tracker",
  "private": true,
  "version": "1.0.0",
  "type": "commonjs",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron-dev": "concurrently \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "preelectron-pack": "npm run build"
  },
  "dependencies": {
    "@ant-design/icons": "^5.6.1",
    "@electron/remote": "^2.1.2",
    "antd": "^5.24.1",
    "axios": "^1.8.1",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "chart.js": "^4.4.8",
    "electron-squirrel-startup": "^1.0.1",
    "flowbite-react": "^0.10.2",
    "lucide-react": "^0.474.0",
    "react": "^18.2.0",
    "react-bootstrap": "^2.10.9",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.2.0",
    "recharts": "^2.15.1",
    "tailwindcss": "^4.0.9",
    "tcp-port-used": "^1.0.2",
    "tree-kill": "^1.2.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^25.9.8",
    "electron-builder": "^24.13.3",
    "electron-is-dev": "^2.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "vite": "^5.1.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.productivity.tracker",
    "productName": "Productivity Tracker",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend/productivity-tracker/dist/app.exe",
        "to": "backend/app.exe"
      },
      {
        "from": "../backend/productivity-tracker/.env",
        "to": "backend/.env"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
